# Home Dir
base_dir=$(dirname $0)/..

if [ "x$KAFKA_REST_HOME" = "x" ]; then
    KAFKA_REST_HOME=$base_dir
    PID_DIR=$base_dir/logs
    LOG_DIR=$base_dir/logs
    mkdir -p $LOG_DIR
fi


[ -z $MAX_WAIT_TIME ] && MAX_WAIT_TIME=120

# KafkaRest env script
. $KAFKA_REST_HOME/config/kafka-rest-env.sh

#KafkaRest PID
PID=0

# Start, stop, status
KAFKA_REST_LAUNCH_COMMAND=$1

# User Name for setup parameter
[ -z $KAFKA_REST_USER ] && KAFKA_REST_USER=kafka


#App name
APP_NAME=kafka-rest

KAFKA_REST_START_CMD="$KAFKA_REST_HOME/bin/kafka-rest-start.sh $KAFKA_REST_HOME/config/kafka-rest.properties"

#Name of PID file
[ -z $PID_DIR ] && PID_DIR="/var/run/$APP_NAME"
[ -z $LOG_DIR ] && LOG_DIR="/var/log/$APP_NAME"

#Name of PID file
PID_FILE="$PID_DIR/$APP_NAME.pid"
#Name of LOG/OUT/ERR file
OUT_FILE="$LOG_DIR/$APP_NAME.out"
ERR_FILE="$LOG_DIR/$APP_NAME.err"


function main {
   case "$1" in
      start)
         kafkarestStart
         ;;
      stop)
         kafkarestStop
         ;;
      status)
         kafkarestStatus
         ;;
      clean)
         kafkarestClean
          ;;
      *)
         printf "Usage: $0 {start|stop|status|clean}\n"
         ;;
   esac
}

function kafkarestStart {

   getPID
   if [ $? -eq 0 ]; then
     printf "KafkaRest server is already running with PID=$PID.\n"
     exit 0
   fi

   printf "Starting KafkaRest Server "

   rm -f $PID_FILE
   su $KAFKA_REST_USER -c "nohup $KAFKA_REST_START_CMD >>$OUT_FILE 2>>$ERR_FILE & echo \$! > $PID_FILE"

   getPID
   kafkarestIsRunning $PID
   if [ $? -ne 1 ]; then
      printf "failed.\n"
      exit 1
   fi

   printf "succeeded with PID=$PID.\n"
   return 0
}

function kafkarestStop {
   getPID
   kafkarestIsRunning $PID
   if [ $? -eq 0 ]; then
     printf "kafkarest is not running.\n"
     rm -f $PID_FILE
     return 0
   fi

   printf "Stopping KafkaRest Server [$PID] "
   kafkarestKill $PID >>$OUT_FILE 2>>$ERR_FILE

   if [ $? -ne 0 ]; then
     printf "failed. \n"
     exit 1
   else
     rm -f $PID_FILE
     printf "succeeded.\n"
     return 0
   fi
}

function kafkarestStatus {
   printf "KafkaRest "
   getPID
   if [ $? -eq 1 ]; then
     printf "is not running. No pid file found.\n"
     return 0
   fi

   kafkarestIsRunning $PID
   if [ $? -eq 1 ]; then
     printf "is running with PID=$PID.\n"
     exit 1
   else
     printf "is not running.\n"
     return 0
   fi
}

# Removed the Kafka REST server PID file if Kafka Rest Server is not running
function kafkarestClean {
   getPID
   kafkarestIsRunning $PID
   if [ $? -eq 0 ]; then
     deleteLogFiles
     return 0
   else
     printf "Can't clean files.  Kafka Rest Server is running with PID=$PID.\n"
     exit 1
   fi
}

# Returns 0 if the Knox is running and sets the $PID variable.
function getPID {
   if [ ! -d $PID_DIR ]; then
      printf "Can't find pid dir.\n"
      exit 1
   fi
   if [ ! -f $PID_FILE ]; then
     PID=0
     return 1
   fi

   PID="$(<$PID_FILE)"
   return 0
}

function kafkarestIsRunning {
   if [ $1 -eq 0 ]; then return 0; fi

   ps -p $1 > /dev/null

   if [ $? -eq 1 ]; then
     return 0
   else
     return 1
   fi
}

function kafkarestKill {
   local localPID=$1
   kill $localPID || return 1
   for ((i=0; i<MAX_WAIT_TIME; i++)); do
      kafkarestIsRunning $localPID
      if [ $? -eq 0 ]; then return 0; fi
      sleep 1
   done

   kill -s KILL $localPID || return 1
   for ((i=0; i<MAX_WAIT_TIME; i++)); do
      kafkarestIsRunning $localPID
      if [ $? -eq 0 ]; then return 0; fi
      sleep 1
   done

   return 1
}

function createLogFiles {
   if [ ! -d "$LOG_DIR" ]; then
      printf "Can't find log dir.  Run sudo $0 setup.\n"
      exit 1
   fi
   if [ ! -f "$OUT_FILE" ]; then su $KAFKA_REST_USER -c "touch $OUT_FILE"; fi
   if [ ! -f "$ERR_FILE" ]; then su $KAFKA_REST_USER -c "touch $ERR_FILE"; fi
}

function deleteLogFiles {
     rm -f $PID_FILE
     printf "Removed the KAFKA REST PID file: $PID_FILE.\n"

     rm -f $OUT_FILE
     printf "Removed the KAFKA REST  OUT file: $OUT_FILE.\n"

     rm -f $ERR_FILE
     printf "Removed the KAFKA REST ERR file: $ERR_FILE.\n"
}

#Starting main
main $KAFKA_REST_LAUNCH_COMMAND